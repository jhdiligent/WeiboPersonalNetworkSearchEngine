<% include ./partials/header %>


<div>
    <h1 style="text-align:center">Query Results</h1>
    <div style="width: 60%; margin: 25px auto;">
        <form action="/results-user" method="POST">
            <div class="form-group">
                <input class="form-control" type="text" name="query" value="<%= curQuery%>" >
            </div>
        </form>
    </div>
    <ul class="nav nav-tabs nav-justified">
        <li role="presentation" ><a href="/results-tweet">Post</a></li>
        <li role="presentation" class="active"><a href="#">User</a></li>
    </ul>
    <div style="width: 60%; margin: 25px auto;">
        <div class="row">
            <%users.forEach(function (user) {%>
            <div class="col-xs-12 col-md-12 thumbnail" style="float: left;margin: 10px 3%; " >
                <div style="width: 80%;margin: auto 10%;text-align: center">
                    <h4><%- user.highlight.NickName %></h4>
                    <div style="width:50%; float: left;text-align: center">
                        <h4>following: <%= user._source.Num_Follows %></h4>
                    </div>
                    <div style="width: 50%; float: right;text-align: center">
                        <h4>follower:<%= user._source.Num_Fans %></h4>
                    </div>
                    <a href="<%= user._source.URL %>" >More</a>
                </div>
            </div>
            <% })%>
        </div>
    </div>
    <hr>
    <div style="width: 60%; margin: 25px auto;">
        <div class="row">
            <%if(supUsers){%>
                <% for (var i=0;i<supUsers.length;i++){ %>
                    <% var user = supUsers[i];%>
                    <% var tweet = supTweets[i]; %>
                        <div style="float:left; width:100%; height:120px" class="thumbnail">
                            <div style="float:left; width:45%; height:110px; border-right: 0.5px groove rgba(33, 28, 28, 0.2);
                                        display: -webkit-box;
                                          -webkit-box-orient: horizontal;
                                          -webkit-box-pack: center;
                                          -webkit-box-align: center;

                                          display: -moz-box;
                                          -moz-box-orient: horizontal;
                                          -moz-box-pack: center;
                                          -moz-box-align: center;

                                          display: -o-box;
                                          -o-box-orient: horizontal;
                                          -o-box-pack: center;
                                          -o-box-align: center;

                                          display: -ms-box;
                                          -ms-box-orient: horizontal;
                                          -ms-box-pack: center;
                                          -ms-box-align: center;

                                          display: box;
                                          box-orient: horizontal;
                                          box-pack: center;
                                          box-align: center;">
                                <div style="width:100%">
                                    <p style="text-align: center; margin: auto 10%">UserName: <%=user._source.NickName %></p>
                                    <p style="text-align: center; margin: auto 10%">Following: <%= user._source.Num_Follows%></p>
                                    <p style="text-align: center; margin: auto 10%">Follower: <%= user._source.Num_Fans%></p>
                                    <a style="margin: auto 10%;float: right" href="<%=user._source.URL%>">More info</a>
                                </div>

                            </div>
                            <div style="width:55%;height:120px; float:right;   display: -webkit-box;
                                  -webkit-box-orient: horizontal;
                                  -webkit-box-pack: center;
                                  -webkit-box-align: center;

                                  display: -moz-box;
                                  -moz-box-orient: horizontal;
                                  -moz-box-pack: center;
                                  -moz-box-align: center;

                                  display: -o-box;
                                  -o-box-orient: horizontal;
                                  -o-box-pack: center;
                                  -o-box-align: center;

                                  display: -ms-box;
                                  -ms-box-orient: horizontal;
                                  -ms-box-pack: center;
                                  -ms-box-align: center;

                                  display: box;
                                  box-orient: horizontal;
                                  box-pack: center;
                                  box-align: center;">
                                <div style="width:100%;">
                                    <p style=" margin: auto 10%">Related tweet</p>
                                    <p style="text-align: center; margin: auto 10%"><%- tweet.highlight.Content %></p>
                                    <%var id = tweet._source.id%>
                                    <% var seg = id.split("_")%>
                                    <a style="margin: auto 10%;float: right" href="https://www.weibo.com/<%= tweet._source.ID %>/<%=seg[1]%>">Read More</a>
                                </div>
                            </div>
                        </div>
                <%}%>
            <%}%>
        </div>
    </div>



</div>
<% include ./partials/footer %>